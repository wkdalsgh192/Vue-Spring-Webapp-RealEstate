<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.happyhouse.model.mapper.HeartMapper">
	<select id = "list" resultType="houselike" parameterType="String">
		<![CDATA[select no, apt_name, price, area, last_update from interestarea where id = #{id} order by no desc]]>
	</select>
	<delete id = "delete" parameterType="houselike">
      delete from interestarea
      where no = #{no}
   </delete>
   <select id = "search" resultType="SearchRankDto">
   		select *
   		from searchrank
   		order by cnt desc limit 5
   </select>
</mapper>